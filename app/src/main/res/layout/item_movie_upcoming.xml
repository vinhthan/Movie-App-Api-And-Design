<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgItemMovieUpComing"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-9dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/txvItemTitleUpComing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="38dp"
        android:text=""
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhile"
        app:layout_constraintBottom_toBottomOf="@+id/imgItemMovieUpComing"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txvItemDateUpComing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:text=""
        android:textColor="@color/colorWhile"
        app:layout_constraintBottom_toBottomOf="@+id/imgItemMovieUpComing"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgItemMovieUpComing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgItemMovieUpComing"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_gradient" />
</androidx.constraintlayout.widget.ConstraintLayout>